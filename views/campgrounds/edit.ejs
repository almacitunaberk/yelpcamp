<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" id="title" type="text" name="campground[title]" value="<%= campground.title%>" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          id="location"
          type="text"
          name="campground[location]"
          value="<%= campground.location%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image</label>
        <input class="form-control" id="image" type="text" name="campground[image]" value="<%= campground.image%>" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <input class="form-control" id="price" type="number" name="campground[price]" value="<%= campground.price%>" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" id="description" type="text" name="campground[description]">
<%= campground.description%></textarea
        >
      </div>
      <button class="btn btn-success my-3" type="submit">Update Campground</button>
    </form>
  </div>
</div>

<a href="/campgrounds/<%= campground._id%>">Back to Campground</a>
